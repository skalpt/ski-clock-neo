{
  "name": "norrtek-iot",
  "version": "1.0.0",
  "description": "Norrtek IoT - Multi-product embedded platform library for ESP32/ESP8266",
  "keywords": ["iot", "esp32", "esp8266", "mqtt", "ota", "neopixel"],
  "authors": [
    {
      "name": "Norrtek"
    }
  ],
  "frameworks": "arduino",
  "platforms": ["espressif32", "espressif8266"],
  "dependencies": [
    {
      "name": "Adafruit NeoPixel",
      "version": ">=1.10.0"
    },
    {
      "name": "RTClib",
      "version": ">=2.0.0"
    },
    {
      "name": "PubSubClient",
      "version": ">=2.8"
    },
    {
      "name": "AutoConnect",
      "version": ">=1.3.0"
    }
  ],
  "build": {
    "flags": [
      "-I core",
      "-I connectivity", 
      "-I display"
    ],
    "srcFilter": [
      "+<**/*.cpp>"
    ]
  }
}
